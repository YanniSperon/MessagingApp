<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.ListView?>
<VBox xmlns:fx="http://javafx.com/fxml/1" styleClass="background" alignment="CENTER" fx:controller="HomeController" fx:id="root" spacing="10">
    <TextField styleClass="textEntryBox" fx:id="messageEntryField" onKeyPressed="#onMessageEntryKeyPressed"/>
    <Button styleClass="button" fx:id="sendButton" text="Send" alignment="CENTER" onAction="#sendButtonPressed"/>
    <ListView fx:id="listView" onMouseClicked="#listItemClicked"/>
</VBox>